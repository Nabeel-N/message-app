  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.9.2"
  }
}
